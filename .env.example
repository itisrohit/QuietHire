# QuietHire Environment Configuration

# Application
APP_NAME="QuietHire API"
ENV=development
API_PORT=3000
LOG_LEVEL=info

# PostgreSQL - Main Database
DB_HOST=postgres
DB_PORT=5432
DB_USER=quiethire
DB_PASSWORD=changeme_secure_password
DB_NAME=quiethire
DB_SSL_MODE=disable

# ClickHouse - Job Storage
CLICKHOUSE_HOST=clickhouse
CLICKHOUSE_PORT=8123
CLICKHOUSE_HTTP_PORT=8123
CLICKHOUSE_NATIVE_PORT=9000
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=changeme_clickhouse_password
CLICKHOUSE_DB=quiethire

# Typesense - Search Engine
TYPESENSE_HOST=typesense
TYPESENSE_PORT=8108
TYPESENSE_API_KEY=your_typesense_api_key_here

# Redis/Dragonfly - Cache
REDIS_HOST=dragonfly
REDIS_PORT=6379

# Temporal - Workflow Orchestration
TEMPORAL_HOST=temporal
TEMPORAL_PORT=7233
TEMPORAL_NAMESPACE=default

# Groq API - LLM for Parsing
GROQ_API_KEY=your_groq_api_key_here

# Llama API - Email Generation
LLAMA_API_KEY=your_llama_api_key_here
LLAMA_MODEL=llama-3.3-70b-versatile

# Proxy Configuration
PROXY_POOL_SIZE=10
RESIDENTIAL_PROXY_URL=your_residential_proxy_url_here
DATACENTER_PROXY_URL=your_datacenter_proxy_url_here
PROXY_PROVIDER_API_KEY=

# Email Service (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
SMTP_FROM=noreply@quiethire.com

# Monitoring & Observability
SENTRY_DSN=
GRAFANA_ADMIN_PASSWORD=admin

# Authentication
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRY=24h

# Feature Flags
ENABLE_EMAIL_OUTREACH=true
ENABLE_GHOST_JOB_FILTER=true
MIN_REALSCORE_THRESHOLD=70

# Crawler Settings
CRAWLER_CONCURRENT_WORKERS=8
CRAWLER_REQUEST_DELAY_MS=1000
CRAWLER_MAX_RETRIES=3

# Rate Limiting
API_RATE_LIMIT=100
API_RATE_WINDOW=1m
